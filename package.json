{
    "name": "@rahulv.dev/npm-package-template",
    "version": "1.0.0",
    "description": "A template for creating and publishing TypeScript-based npm packages, with a focus on type safety, testing, and automated releases.",
    "main": "dist/index.js",
    "types": "types/index.d.ts",
    "scripts": {
        "build": "tsc && vite build",
        "dev": "vite",
        "test": "vitest --run"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "types"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rahul-vashishtha/npm-package-template.git"
    },
    "keywords": [
        "npm-package",
        "npm",
        "template",
        "typescript",
        "package",
        "release"
    ],
    "author": "Rahul Vashishtha <https://rahulv.dev>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rahul-vashishtha/npm-package-template/issues"
    },
    "homepage": "https://github.com/rahul-vashishtha/npm-package-template#readme",
    "devDependencies": {
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/npm": "^12.0.1",
        "@types/node": "^22.0.0",
        "semantic-release": "^24.0.0",
        "typescript": "^5.5.4",
        "vite": "^5.3.5",
        "vitest": "^2.0.5"
    }
}
